<fx:root resizable="false" title="Help" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/help_icon.png" />
  </icons>
   <scene>
      <Scene>
          <AnchorPane prefHeight="695.0" prefWidth="511.0">
              <HBox alignment="CENTER" prefHeight="100.0" prefWidth="219.0">
                  <ImageView fitHeight="667.0" fitWidth="511.0" pickOnBounds="true" preserveRatio="true">
                      <Image url="@../images/command_summary_table.png" />
                  </ImageView>
              </HBox>
              <VBox layoutY="651.0" prefHeight="43.0" prefWidth="511.0">
                  <HBox alignment="CENTER" prefHeight="75.0" prefWidth="510.0">
                      <Label fx:id="helpMessage" text="Label">
                     <font>
                        <Font name="Roboto Mono Regular" size="13.0" />
                     </font></Label>
                      <Button fx:id="copyButton" mnemonicParsing="false" onAction="#copyUrl" text="Copy URL">
                     <font>
                        <Font name="Roboto Mono Regular" size="13.0" />
                     </font></Button>
                  </HBox>
              </VBox>
          </AnchorPane>
      </Scene>
   </scene>
